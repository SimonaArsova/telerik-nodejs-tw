mixin nav()
    nav.navbar.navbar-inverse
        .container-fluid
            ul.nav.navbar-nav
                li
                    a(href='/') Home
                li
                    a(href='/offers') All offers
            form.navbar-form.navbar-left
                .form-group
                    input.form-control.search-input(type='text', placeholder='Search')
                button.btn.btn-default#search-btn(type='submit') Submit       

            ul.nav.navbar-nav.navbar-right
                if user
                    li.dropdown.right
                        a.dropdown-toggle(data-toggle='dropdown', href='#')
                            =user.username
                            span.caret
                        ul.dropdown-menu
                            li
                                a(href='/offers/my-offers') My offers
                            li
                                a(href='/offers/form') Add offer
                            li
                                form(action='/auth/sign-out' method='post')
                                    button.nav-btn
                                        | Sign Out
                else
                    li.dropdown.right
                        a.dropdown-toggle(data-toggle='dropdown', href='#')
                            | User
                            span.caret
                        ul.dropdown-menu
                            li
                                a(href='/auth/sign-up') Sign up
                            li
                                a(href='/auth/sign-in') Sign in