extends ../_shared/_master
block body
    include ../errors/all
    .offers-body.form
        .panel.panel-default.col-md-6
            .panel-body.form
                form(action="/offers" method = "POST" enctype="multipart/form-data")
                    p
                        label(for="title")
                            |Title:
                        input(type = "text" name = "title")
                    p
                        label(for="Image")
                            |Images:
                        input.input-image(type="file" name="image" id="file" class="form-control" multiple="multiple")
                        div(id="imgContainer" class="col-sm-12")
                    p
                        label(for="description")
                            |Description:
                        textarea(name = "description"  rows="5").description-offer
                    p
                        label(for="rating")
                            |Rating:
                        select(id="rating" name = "rating")
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                    p
                        button.btn.btn-info
                            |Save       
    script(src='/static/js/show-image.js')