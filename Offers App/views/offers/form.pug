extends ../_shared/_master
block body
    != messages()
    .offers-body.form
        .panel.panel-default.col-md-6
            .panel-body.form
                form(action="/offers" method = "POST")
                    p
                        label(for="title")
                            |Title:
                        input(required type = "text" name = "title")
                    p
                        .img
                            label(for="Image")
                                |Images:
                            input(required type = "text", name = "image1")
                        .img
                            label(for="Image")
                            input(type = "text", name = "image2")
                        .img
                            label(for="Image")
                            input(type = "text", name = "image3")
                    p
                        label(for="description")
                            |Description:
                        textarea(required name = "description"  rows="5").description
                    p
                        label(for="rating")
                            |Rating:
                        input(required list="rating" name="rating")
                        datalist(id="rating")
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                    p
                        button.btn.btn-info
                            |Save       