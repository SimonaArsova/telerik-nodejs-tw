extends ../_shared/_master
block body
  .wrapper
    .outher
      .container-description
        #carouselExampleControls.carousel.slide(data-ride='carousel')
          .carousel-inner(role='listbox')
            .carousel-item.active
              img.d-block.img-fluid.carousel-image(src='/' + context.images[0].path, alt='First slide')
            if context.images[1]
              .carousel-item
                img.d-block.img-fluid.carousel-image(src='/' + context.images[1].path, alt='Second slide')
            if context.images[2 ]
              .carousel-item
                img.d-block.img-fluid.carousel-image(src='/' + context.images[2].path, alt='Third slide')
          a.carousel-control-prev(href='#carouselExampleControls', role='button', data-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.sr-only Previous
          a.carousel-control-next(href='#carouselExampleControls', role='button', data-slide='next')
            span.carousel-control-next-icon(aria-hidden='true')
            span.sr-only Next
        .descr
          h1.title-des 
            =context.title
          h3
            =context.price + " BGN"
      .footer
        .description-div
          h2.line-offset
            | Author:
          h4.offset 
            if user.username != context.user.username
              a(href="/user/"+ context.user.username)
                =context.user.username
            else
              div
                =context.user.username
        .description-div
          hr
          h2.line-offset
            | Description:
          h4.offset 
            =context.description
        if context.comments
          .comments-container-div
            hr
            .comments-container
              h2 Comments:
              ul#comments-list.comments-list
                each comment in context.comments
                  li
                    .comment-main-level
                      .comment-avatar
                        img(src='/' + comment.picture.path, alt='')
                      .comment-box
                        .comment-head
                          h6.comment-name.by-author 
                            =comment.user
                          i.fa.fa-comment
                        .comment-content 
                          =comment.comment
        button.btn.comment-btn
          |Add comment
        div.comment
          form(action="/offers/"+context._id method = "POST")
            label(for="comment")
              |Comment:
            textarea.comment-input(name = "comment"  rows="3")
            div
              button.btn.btn-info
                |Save   



