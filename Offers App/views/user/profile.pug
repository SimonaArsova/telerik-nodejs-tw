extends ../_shared/_master
block body
    div.profile-container.panel.panel-default
        div.inner-container
            if context.picture
                img.img-circle.picture(src=context.picture, alt="")
            else
                img.img-circle.picture(src = 'https://cdn2.iconfinder.com/data/icons/finances/512/client-512.png')
            dl
                dt
                    button(id='change-avatar-btn', type='button', class='btn btn-info', data-toggle="modal" data-target="#myModal")
                        span.glyphicon.glyphicon-picture
                        |  Change avatar
                dt
                    div.col-md-6
                        .upload-avatar
        
            h2
                |Username: 
            h4#curent-user
                =context.username
            h2
                |E-mail: 
            h4
                =context.email
    include ./picture.pug