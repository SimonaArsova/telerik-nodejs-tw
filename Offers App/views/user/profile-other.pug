extends ../_shared/_master
block body
    .row
        .col-lg-3.col-sm-6
            .card.hovercard
                .cardheader
                    if context.offers.length > 0
                        img(src= '/' + context.offers[0].images[0].path, alt="")
                    else 
                        img(src="http://thewallpaper.co/wp-content/uploads/2016/10/Summer-Sea-Star-Fish-Wallpapers.jpg", alt="")
                .avatar
                    if context.picture
                        img(alt='', src=context.picture)
                    else
                        img(src='https://cdn2.iconfinder.com/data/icons/finances/512/client-512.png', alt="")
                .info-user
                    .title-user
                        =context.username
                    .desc 
                        =context.email
                .message
                    button.btn.btn-info
                        |Send message
                    
                .bottom
                    a.card-btn.btn.btn-primary.btn-twitter.btn-sm(href='https://twitter.com/webmaniac')
                        i.fa.fa-twitter
                    a.card-btn.btn.btn-danger.btn-sm(rel='publisher', href='https://plus.google.com/+ahmshahnuralam')
                        i.fa.fa-google-plus
                    a.card-btn.btn.btn-primary.btn-sm(rel='publisher', href='https://plus.google.com/shahnuralam')
                        i.fa.fa-facebook
        .col-lg-9
            .offers.panel.panel-default
                .panel-heading
                    |All offers of 
                    =context.username
                .panel-body
                    ul
                        if context.offers.length > 0
                            each offer in context.offers
                                li.li-offer
                                    .col-md-2.offer-user
                                        a(href="/offers/" + offer._id)
                                            img.offer-img.img-thumbnail(src = '/' + offer.images[0].path)
                                    .col-md-8.offer-info
                                        h2
                                            =offer.title
                                        h4.overflow-des
                                            =offer.description
                                    a.btn.btn-info.user-offers-btn(href="/offers/" + offer._id)
                                       |Show more information
                        else
                            h2.no-offers
                                |This user has no offers yet   
